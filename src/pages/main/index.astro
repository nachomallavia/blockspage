---
import blockspageImg from '../../assets/blockspage.svg';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';
import DotGrid from '@/components/DotGrid.astro';
---

<Layout>
    <main class="relative min-h-screen">
        <DotGrid />
        <div class="flex flex-col items-center min-h-screen justify-center px-4">
            <Image src={blockspageImg} alt="Blockspage" class="w-1/8 mb-4 invert-0 dark:invert" />
            <div class="flex flex-col items-center justify-center h-100 border-stone-500 border-2 rounded-xl w-full max-w-2xl p-8 backdrop-blur-sm">
                
            </div>
            <h1 class="text-6xl font-bold text-center mb-8">The simplest site builder</h1>
                <a href="/auth" class="w-full max-w-md">
                        <button class="bg-orange-500 hover:bg-orange-600 text-white p-4 rounded-lg w-full transition-colors">
                        Login or Signup
                    </button>
                </a>
        </div>
    </main>
</Layout>
---
import blockspageImg from '../../assets/blockspage.png';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';
---

<Layout>
    <div class="flex flex-col items-center h-screen justify-center">
        <Image src={blockspageImg} alt="Blockspage" class="w-1/8 mb-4" />
        <div class="flex flex-col items-center justify-center h-100 border-slate-500 border-2 rounded-xl w-1/2"></div>
        <h1 class="text-6xl font-bold ">The simplest page builder</h1>
    
    <a href="/auth" class="text-blue-500">
        <button class="bg-blue-500 text-white p-2 rounded-sm w-full mb-4">
            Login or Signup
        </button>
    </a>
</div>
</Layout>
</div>